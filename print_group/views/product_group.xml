<odoo>
    <data>

        <record id="view_form_product_template_inherited"
            model="ir.ui.view">
            <field name="name">print_group</field>
            <field name="model">product.template</field>
            <field name="inherit_id"
                ref="product.product_template_only_form_view"/>
            <field name="arch"
                type="xml">
                <xpath expr="//field[@name='invoice_policy']"
                    position="after">
                    <field name="print_group" />
                </xpath>
            </field>
        </record>
        <record id="view_form_product_normal_inherited"
            model="ir.ui.view">
            <field name="name">print_group</field>
            <field name="model">product.product</field>
            <field name="inherit_id"
                ref="product.product_normal_form_view"/>
            <field name="arch"
                type="xml">
                <xpath expr="//field[@name='invoice_policy']"
                    position="after">
                    <field name="print_group" />
                </xpath>
            </field>
        </record>

        <record id="view_form_print_group_sales_inherited"
            model="ir.ui.view">
            <field name="name">print_group_description</field>
            <field name="model">sale.order</field>
            <field name="inherit_id"
                ref="sale.view_order_form"/>
            <field name="arch"
                type="xml">
                <xpath expr="//field[@name='note']"
                    position="after">
                    <field name="print_group_description"
                        nolabel="1"
                        placeholder="Descripció productes agrupats"/>
                </xpath>
            </field>
        </record>

        <record id="view_form_print_group_invoice_inherited"
            model="ir.ui.view">
            <field name="name">print_group_description</field>
            <field name="model">account.move</field>
            <field name="inherit_id"
                ref="account.view_move_form"/>
            <field name="arch"
                type="xml">
                <xpath expr="//field[@name='narration']"
                    position="after">
                    <field name="print_group_description"
                        nolabel="1"
                        placeholder="Descripció productes agrupats"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>