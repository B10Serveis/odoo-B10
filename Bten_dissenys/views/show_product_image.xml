<odoo>
    <data>
        <record id="sale_order_view_inherit"
            model="ir.ui.view">
            <field name="name">sale.order.custom.form.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id"
                ref="sale.view_order_form"/>
            <field name="arch"
                type="xml">
                <xpath expr="//field[@name='payment_mode_id']"
                    position="after">
                    <field name="show_product_image"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>