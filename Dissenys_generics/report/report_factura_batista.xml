<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_factura_batista">
            <t t-call="web.html_container">
                <t t-set="data_report_margin_top"
                    t-value="30"/>
                <t t-set="data_report_header_spacing"
                    t-value="30"/>
                <t t-set="data_report_margin_bottom"
                    t-value="25"/>
                <t t-foreach="docs"
                    t-as="doc">
                    <t t-call="Dissenys_generics.report_factura_batista_document"
                        t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_factura_batista_document">
            <t t-set="doc"
                t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <!-- Header -->
            <div class="header">
                <div class="first-page">

                    <!-- Multicompany -->
                    <t t-if="not o and doc">
                        <t t-set="o"
                            t-value="doc"/>
                    </t>
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company"
                            t-value="o.company_id.sudo()"/>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company"
                            t-value="res_company"/>
                    </t>
                    <!-- Capçalera -->
                    <div class="row"
                        id="b10_header">

                        <!-- Logo esquerra -->
                        <div class="col-6"
                            id="b10_header_left">
                            <img t-if="doc.company_id.logo"
                                t-att-src="image_data_uri(doc.company_id.logo)"
                                style="max-width: 200px; max-height: 150px;"/>
                        </div>

                        <!-- Dades Empresa dreta -->
                        <div class="col-6"
                            id="b10_header_right"
                            style="padding:15px; padding-left:30px;">
                            <p style="margin-bottom: 0; color:gray; font-size:0.75em;">
                                <strong>
                                    <span t-if="company.name"
                                        t-field="company.name"/>
                                </strong>
                                <br/>
                                <span t-if="company.vat">VAT: <span t-field="company.vat"/>
                                </span>
                            </p>
                            <p style="margin-bottom: 0; color:gray; font-size:0.75em; margin-bottom:10px">
                                <span t-if="company.street"
                                    t-field="company.street"/>
                                <br/>
                                <span t-if="company.zip"
                                    t-field="company.zip"/>
                                <span> - </span>
                                <span t-if="company.city"
                                    t-field="company.city"/>
                                <span> (</span>
                                <span t-if="company.state_id.name"
                                    t-field="company.state_id.original_name"/>
                                <span>)</span>
                                <br/>
                                <span t-if="company.phone">Tel: <span t-field="company.phone"/>
                                </span>
                                <span t-if="company.email">Email: <span t-field="company.email"/>
                                </span>
                                <br/>
                                <span t-if="company.website"
                                    t-field="company.website"/>
                            </p>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Page -->
            <div class="article">
                <div class="container"
                    style="margin-bottom:1em; padding-top:40px;">
                    <!-- Client i Document -->
                    <div class="row"
                        id="b10_docinfo">
                        <!-- Columna esquerra -->
                        <div class="col-6"
                            id="b10_docinfo_left">

                            <!-- Dades Comanda -->
                            <span t-if="doc.name">
                                <h5 style="border-bottom: 1px solid #c1c1c1; ">
                                    <span t-if="o.amount_total_signed >= 0">
                                        <strong>Invoice</strong>
                                    </span>
                                    <span t-if="not o.amount_total_signed >= 0">
                                        <strong>Credit note</strong>
                                    </span>
                                </h5>
                            </span>
                            <p id="b10_invoice_number"
                                style="margin-bottom: 0;">
                                <span t-if="doc.name and o.amount_total_signed >= 0">Invoice: <span t-field="doc.name"/>
                                </span>
                                <span t-if="doc.name and not o.amount_total_signed >= 0">Credit note: <span t-field="doc.name"/>
                                </span>
                            </p>
                            <p id="b10_invoice_date"
                                style="margin-bottom: 0;">
                                <span t-if="doc.invoice_date and o.amount_total_signed >= 0">Invoice Date: <span t-field="doc.invoice_date"
                                    t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
                                </span>
                                <span t-if="doc.invoice_date and not o.amount_total_signed >= 0">Credit note Date: <span t-field="doc.invoice_date"
                                    t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
                                </span>
                            </p>
                            <p id="b10_payment_terms"
                                style="margin-bottom: 0;">
                                <span t-if="doc.invoice_payment_term_id.name">Payment Terms: <span t-field="doc.invoice_payment_term_id.name"/>
                                </span>
                            </p>
                            <p id="b10_payment_method"
                                style="margin-bottom: 0;">
                                <span t-if="doc.payment_mode_id.name">Payment Method: <span t-field="doc.payment_mode_id.name"/>
                                </span>
                                <br/>
                            </p>
                            <p id="b10_iban"
                                style="margin-bottom: 0;">
                                <span t-if="doc.payment_mode_id.name 
                                    and doc.payment_mode_id.payment_method_id.code 
                                    and doc.payment_mode_id.payment_method_id.code=='bank_transfer'">IBAN: <span t-field="doc.partner_bank_id.acc_number"/>
                                </span>
                            </p>
                            <p id="b10_sepa"
                                style="margin-bottom: 0;">
                                <span t-if="doc.payment_mode_id.payment_method_id.code=='sepa_direct_debit' 
                                    and doc.mandate_id.partner_bank_id.acc_number">IBAN: <span t-field="doc.mandate_id.partner_bank_id.acc_number"/>
                                </span>
                            </p>
                        </div>
                        <!-- Columna dreta-->
                        <div class="col-6"
                            style="margin-left: 20px;"
                            id="b10_docinfo_right">
                            <!-- Dades Client -->
                            <h5>
                                <strong>
                                    <span t-if="doc.partner_id.parent_id"
                                        t-field="doc.partner_id.parent_id"/>
                                </strong>
                            </h5>
                            <p style="margin-bottom: 0;">
                                <span t-if="doc.partner_id.name"
                                    t-field="doc.partner_id.name"/>
                            </p>
                            <p style="margin-bottom: 0;">
                                <span t-if="doc.partner_id.comercial"
                                    t-field="doc.partner_id.comercial"/>
                            </p>
                            <p style="margin-bottom: 0;">
                                <span t-if="doc.partner_id.street"
                                    t-field="doc.partner_id.street"/>
                                <span t-if="doc.partner_id.street2">,                                    
                                    <span t-field="doc.partner_id.street2"/>
                                </span>
                            </p>
                            <p style="margin-bottom: 0;">
                                <span t-if="doc.partner_id.zip">
                                    <span t-field="doc.partner_id.zip"/>
                                    <span> - </span>
                                </span>
                                <span t-if="doc.partner_id.city"
                                    t-field="doc.partner_id.city"/>

                                <span t-if="doc.partner_id.state_id.name">(                                    
                                    <span t-field="doc.partner_id.state_id.original_name"/>
                                    <span>)</span>
                                </span>
                            </p>
                            <p style="margin-bottom: 0;">
                                <span t-if="doc.partner_id.vat">TIN: <span t-field="doc.partner_id.vat"/>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Linies Factura -->
                <table class="table table-condensed table-striped"
                    id="b10_linetable">
                    <!-- Comprovació si hi ha algun descompte -->
                    <t t-set="is_discount"
                        t-value="0"/>
                    <t t-foreach="doc.invoice_line_ids"
                        t-as="l">
                        <t t-if="l.discount">
                            <t t-set="is_discount"
                                t-value="1"/>
                        </t>
                    </t>
                    <!-- Fi Comprovació si hi ha algun descompte -->
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit Price</th>
                            <th t-if="is_discount"
                                class="text-right">Disc.(%)</th>
                            <th class="text-right">Price</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal"
                            t-value="0"/>
                        <t t-set="lines"
                            t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                        <t t-set="last_order"
                            t-value="' '"/>
                        <t t-set="current_order"
                            t-value="' '"/>
                        <t t-set="group_by_order"
                            t-value="o.group_by_origin"/>

                        <t t-foreach="lines"
                            t-as="line">
                            <t t-set="current_subtotal"
                                t-value="current_subtotal + line.price_total" />

                            <t t-if="group_by_order">
                                <t t-set="current_order"
                                    t-value="(line.sale_line_ids[0].order_id.name if line.sale_line_ids else '')"/>
                                <tr t-if="(not last_order==current_order) and (not current_order==' ')"
                                    class="table-active"
                                    style="border-top-color: #373737; border-bottom-color: #373737; border-width: 1px; background: #dee2e6;">
                                    <td colspan="6">
                                        <strong>
                                        Sale order <span t-esc="current_order"/>
                                        </strong>
                                    </td>
                                </tr>
                            </t>

                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="line.display_type == 'product'"
                                    name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name">
                                        <span t-field="line.name"
                                            t-options="{'widget': 'text'}"/>
                                        <br/>
                                        <data inherit_id="account.report_invoice_document">
                                            <xpath expr="//div[@id='total']"
                                                position="after">
                                                <t t-set="lot_values"
                                                    t-value="o._get_invoiced_lot_values()"/>
                                                <t t-if="lot_values">
                                                    <t t-set="i"
                                                        t-value="0"/>
                                                    <t t-foreach="lot_values"
                                                        t-as="snln_line">
                                                        <t t-if="line.product_id.display_name==snln_line['product_name']">
                                                            <!-- Si és el 1r SN -->
                                                            <t t-if="i==0">
                                                                <span>S/N: </span>
                                                                <t t-esc="snln_line['lot_name']"/>
                                                            </t>
                                                            <!-- Si no és el 1r SN -->
                                                            <t t-if="i>0">
                                                                <span>, </span>
                                                                <t t-esc="snln_line['lot_name']"/>
                                                            </t>
                                                            <!-- Cada SN -->
                                                            <t t-set="i"
                                                                t-value="i+1"/>
                                                        </t>
                                                    </t>
                                                </t>
                                            </xpath>
                                        </data>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id"
                                            groups="uom.group_uom"/>
                                    </td>
                                    <td t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap"
                                            t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="is_discount"
                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap"
                                            t-field="line.discount"/>
                                    </td>
                                    <td class="text-end o_price_total">
                                        <span class="text-nowrap"
                                            t-field="line.price_total" />
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name"
                                            t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section"
                                        t-value="line"/>
                                    <t t-set="current_subtotal"
                                        t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name"
                                            t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                                <t t-set="last_order"
                                    t-value="current_order"/>
                            </tr>
                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-end">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'>
                                        </span>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
                <hr />

                <!-- Totals -->
                <div class="page"
                    style="page-break-inside:avoid;">
                    <div class="row"
                        id="b10_totaltable"
                        style="margin-left: 0px ">
                        <div class="col-6">
                            <div class="row"
                                id="b10_narration">
                                <t t-if="doc.narration">
                                    <div class="jumbotron"
                                        t-field="doc.narration">
                                    </div>
                                </t>
                            </div>
                            <div class="row"
                                id="b10_payment_terms">

                                <t t-set="payment_term_details"
                                    t-value="o.payment_term_details"/>
                                <div t-if="o.invoice_payment_term_id.display_on_invoice and payment_term_details"
                                    t-field="o.invoice_payment_term_id.note"
                                    name="payment_term"/>
                            </div>
                            <div class="row"
                                id="b10_payment_terms_table">
                                <t t-if="o.invoice_payment_term_id.display_on_invoice and payment_term_details">
                                    <div t-if='o.show_payment_term_details'
                                        id="total_payment_term_details_table"
                                        class="row"
                                        style="padding-right: 20px;">

                                        <table class="table table-sm"
                                            style="page-break-inside: avoid; width: 300px;">
                                            <th class="border-black text-start">
                                            Due Date
                                            </th>
                                            <th class="border-black text-end">
                                            Amount Due
                                            </th>
                                            <th t-if="o.show_discount_details"
                                                class="border-black text-end">
                                            Discount
                                            </th>
                                            <t t-foreach="payment_term_details"
                                                t-as="term">
                                                <tr>
                                                    <td t-esc="term.get('date')"
                                                        class="text-start"/>
                                                    <td t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                        t-esc="term.get('amount')"
                                                        class="text-end"/>
                                                    <td t-if="term.get('discount_date')"
                                                        class="text-end">
                                                        <span t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                            t-esc="term.get('discount_amount_currency')"/>
                                                                if paid before
                                                        <span t-esc="term.get('discount_date')"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </table>
                                    </div>
                                </t>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="clearfix">
                                <div id="total"
                                    class="row">
                                    <table class="table table-condensed table-striped"
                                        style="page-break-inside: avoid;">

                                        <!--Tax totals-->
                                        <t t-set="tax_totals"
                                            t-value="o.tax_totals"/>
                                        <t t-call="account.document_tax_totals"/>

                                        <!--Payments-->
                                        <t t-if="print_with_payments">
                                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                                <t t-set="payments_vals"
                                                    t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                                <t t-foreach="payments_vals"
                                                    t-as="payment_vals">
                                                    <tr t-if="payment_vals['is_exchange'] == 0">
                                                        <td>
                                                            <i class="oe_form_field text-end oe_payment_label">Paid on <t t-esc="payment_vals['date']"
                                                                t-options='{"widget": "date"}'/>
                                                            </i>
                                                        </td>
                                                        <td class="text-end">
                                                            <span t-esc="payment_vals['amount']"
                                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-if="len(payments_vals) > 0">
                                                    <tr class="border-black">
                                                        <td>
                                                            <strong>Amount Due</strong>
                                                        </td>
                                                        <td class="text-end">
                                                            <span t-field="o.amount_residual"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Fi Totals -->
                <hr/>
            </div>
            <!-- Footer -->
            <div class="footer">
                <div class="row"
                    id="b10_footer">
                    <div class="col-12">
                        <div class="last-page">
                            <div style="clear:left; display:block; color:gray; font-size:0.75em; text-align: center;">
                                <p style="margin-bottom: 0; text-align: center;">
                                    According to the GDPR, we inform you that we will process your personal data in order to carry out administrative, accounting and fiscal management. Data
                                    proportionately, the time required by a legal obligation will be retained and will not be transferred to third parties except legal provision required, or if necessary, prior consent of
                                    The interested party. It will be able to exercise the following rights on its personal data: right of access, rectification, erasure, oblate, limitation, opposition, portability and to withdraw the
                                    consent given, to the address indicated in this document. In addition, it will be able to contact the competent supervisory authority in the field of data protection by
                                    get additional information or file a complaint.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row"
                    id="b10_mercantil"
                    t-if="doc.company_id.partner_id.es_libro or doc.company_id.partner_id.es_registro_mercantil or doc.company_id.partner_id.es_hoja or doc.company_id.partner_id.es_folio or doc.company_id.partner_id.es_seccion or doc.company_id.partner_id.es_tomo">
                    <div class="col-12">
                        <div class="last-page">
                            <div style="clear:left; display:block; color:black; font-size:0.75em; text-align: center;">
                                <p style="margin-bottom: 0; text-align: center;">
                                    <span t-field="doc.company_id.name" />
									Registered in the commercial register
                                    <span t-if="doc.company_id.partner_id.es_registro_mercantil">
										of
                                        <span t-field="doc.company_id.partner_id.es_registro_mercantil" />
                                    </span>
                                    <span t-if="doc.company_id.partner_id.es_tomo">
										, on the Volume
                                        <span t-field="doc.company_id.partner_id.es_tomo" />
                                    </span>
                                    <span t-if="doc.company_id.partner_id.es_libro">
										, Book
                                        <span t-field="doc.company_id.partner_id.es_libro" />
                                    </span>
                                    <span t-if="doc.company_id.partner_id.es_folio">
										, Sheet
                                        <span t-field="doc.company_id.partner_id.es_folio" />
                                    </span>
                                    <span t-if="doc.company_id.partner_id.es_seccion">
										, Section
                                        <span t-field="doc.company_id.partner_id.es_seccion" />
                                    </span>
                                    <span t-if="doc.company_id.partner_id.es_hoja">
										, Page
                                        <span t-field="doc.company_id.partner_id.es_hoja" />
                                    </span>
									.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>