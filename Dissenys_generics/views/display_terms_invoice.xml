<odoo>
    <data>
        <record id="payment_term_view_inherit"
            model="ir.ui.view">
            <field name="name">payment.term.custom.form.inherited</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id"
                ref="account.view_payment_term_form"/>
            <field name="arch"
                type="xml">
                <xpath expr="//field[@name='company_id']"
                    position="after">
                    <field name="display_on_invoice"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>