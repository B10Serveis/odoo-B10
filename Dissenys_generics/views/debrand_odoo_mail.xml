<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="debrand_odoo_inherit_mail_notification"
			inherit_id="mail.mail_notification_paynow">
			<!-- BODY -->
			<xpath expr="//table/tr/td/table/tbody/tr[2]/td" position="replace">
				<t t-raw="message.body"/>
			</xpath> 		
			<!-- FOOTER -->
			<xpath expr="//table/tr/td/table/tbody/tr[3]/td" position="replace">
				<td style="display:none;padding: 0; font-size:11px;">
					<hr width="100%"
						style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 32px 0px 4px 0px;" />
					<b t-esc="company.name" />
					<br />
					<div style="color: #999999">
						<t t-esc="company.phone" />
						<t t-if="company.email">
							|
							<a t-att-href="'mailto:%s' % company.email"
								style="text-decoration:none; color: #999999;">
								<t t-esc="company.email" />
							</a>
						</t>
						<t t-if="company.website">
							|
							<a t-att-href="'%s' % company.website"
								style="text-decoration:none; color: #999999;">
								<t t-esc="company.website" />
							</a>
						</t>
					</div>
				</td>
			</xpath>
			<!-- Treure Odoo -->
			<xpath expr="//table/tr[2]/td" position="replace">
				<td	style="display:none" />
			</xpath>
		</template>		
	</data>
</odoo>