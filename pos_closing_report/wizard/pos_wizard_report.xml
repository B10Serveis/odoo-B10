<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_pos_session_wizard" model="ir.ui.view">
            <field name="name">pos.closing.wizard.form</field>
            <field name="model">pos.closing.wizard</field>
            <field name="arch" type="xml">
                <form string="POS Report Closing">
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <strong>Point of Sale</strong><field name="pos_session_ids" colspan="4" nolabel="1" />
                    </group>
                    <footer>
                        <button name="generate_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    <record model="ir.actions.act_window" id="pos_closing_report_act_window">
      <field name="name">POS Closing Report Wizard</field>
      <field name="res_model">pos.closing.wizard</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_pos_session_wizard"/>
      <field name="target">new</field>
    </record>
    <record model="ir.ui.menu" id="pos_closing_wizard_report_menu">
      <field name="name">POS Closing Report</field>
      <field name="parent_id" ref="point_of_sale.menu_point_rep"/>
      <field name="action" ref="pos_closing_report_act_window"/>
      <field name="sequence" eval="100"/>
    </record>
</odoo>

