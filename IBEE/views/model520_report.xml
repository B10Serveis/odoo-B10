<odoo>
  <data>
    <template id="model520_report_template">
      <t t-call="web.html_container">
        <t t-call="web.internal_layout">
          <div class="page">
            <div class="text-center">
              <h2>Model 520 - IBEE</h2>
            </div>
            <div class="row">
            	<span>Dades del presentador</span>
            </div>
            <div class="row">
            	<div class="col-4"><strong>NIF:</strong></div>
            	<div class="col-8"><strong>Cognoms i Nom/Raó Social:</strong></div>
            </div>
            <div class="row">
            	<div class="col-4"><span t-esc="NIF" /></div>
            	<div class="col-8"><span t-esc="name" /></div>
            </div>
            <div class="row">
            	<div class="col-12"><strong>Adreça:</strong></div>            	
            </div>
            <div class="row">
            	<div class="col-12"><span t-esc="street" /></div>            	
            </div>
            <div class="row">
            	<div class="col-2"><strong>Codi Postal:</strong></div>
            	<div class="col-2"><strong>País:</strong></div>
            	<div class="col-4"><strong>Provincia:</strong></div>
            	<div class="col-4"><strong>Municipi:</strong></div>
            </div>
            <div class="row">
            	<div class="col-2"><span t-esc="codpostal" /></div>
            	<div class="col-2"><span t-esc="pais" /></div>
            	<div class="col-4"><span t-esc="provincia" /></div>
            	<div class="col-4"><span t-esc="municipi" /></div>
            </div>
            <hr/>
            <table class="table table-condensed">
              <thead>
                <th></th>
                <th>>8 gr de sucre</th>
                <th>Entre 5 i 8 gr de sucre</th>
              </thead>
              <tbody>
              	<tr>
              		<td><strong>Base Imposable</strong></td>
              		<td><strong>a</strong><span t-esc="IBEE8"/> litres</td>
              		<td><strong>b</strong><span t-esc="IBEE8"/> litres</td>
              	</tr>
              	<tr>
              		<td><strong>Tipus de gravamen</strong></td>
              		<td><strong>a</strong><span t-esc="IBEE8"/> €/l</td>
              		<td><strong>b</strong><span t-esc="IBEE8"/> €/l</td>
              	</tr>
              	<tr>
              		<td><strong>Quota tributària</strong></td>
              		<td><strong>a</strong><span t-esc="IBEE8"/> €</td>
              		<td><strong>b</strong><span t-esc="IBEE8"/> €</td>
              	</tr>
              	<tr>
              		<td><strong>Quota Total</strong></td>
              		<td><span t-esc="IBEE8"/> €</td>
              		<td></td>
              	</tr>
              </tbody>
            </table>            
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
