<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invoice_PuntoVerde_view_form"
            model="ir.ui.view">
            <field name="name">invoice.form.PuntoVerde</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id"
                ref="account.invoice_form"/>
            <field name="arch"
                type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='price_total']"
                    position="before">
                    <field name="PuntoVerde_invoice"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>